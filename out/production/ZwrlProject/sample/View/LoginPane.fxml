            <Label layoutX="126.0" layoutY="23.0" prefHeight="27.0" prefWidth="60.0" text="Sign In">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label layoutX="71.0" layoutY="116.0" text="Need to sign up ?">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Button fx:id="signUpButton" layoutX="81.0" layoutY="188.0" mnemonicParsing="false" onAction="#registerButton" prefHeight="32.0" prefWidth="165.0" text="Sign Up" />
