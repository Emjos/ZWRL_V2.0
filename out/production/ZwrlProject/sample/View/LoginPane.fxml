   <children>
      <AnchorPane layoutX="350.0" layoutY="68.0" prefHeight="263.0" prefWidth="311.0" style="-fx-background-color: #d9d9d9;">
         <children>
            <TextField fx:id="usernameField" layoutX="42.0" layoutY="80.0" prefHeight="26.0" prefWidth="237.0" promptText="User / Email" style="-fx-background-color: #f2f2f2;" />
